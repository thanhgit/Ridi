<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.CurrentRideFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_offer_ride_where_current_ride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_margin="@dimen/margin_button_where_home"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_title"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/margin_button_where_home"
                    android:text="Your offered ride"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_offer_ride_where_current_ride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_button_where_home">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_button_where_home"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_button_where_home"
                        android:paddingRight="@dimen/margin_button_where_home"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_from_place_where_current_ride"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="@dimen/textsize_normal"
                            android:text="Suoi tien"/>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_arrow_forward_black_24dp"/>
                        <TextView
                            android:id="@+id/tv_to_place_where_current_ride"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/margin_button_where_home"
                            android:textSize="@dimen/textsize_normal"
                            android:text="Nha tho duc ba"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_button_where_home"
                        android:paddingRight="@dimen/margin_button_where_home"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_from_time_where_current_ride"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="@dimen/textsize_normal"
                            android:text="Start: 10:30 AM"/>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                        <TextView
                            android:id="@+id/tv_to_time_where_current_ride"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/margin_button_where_home"
                            android:textSize="@dimen/textsize_normal"
                            android:text="End: 11:30 AM"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_offer_ride_where_current_ride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_booking_where_current_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:layout_margin="@dimen/margin_button_where_home"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_title"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/margin_button_where_home"
                        android:text="Your bookings"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_bookings_current_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</FrameLayout>