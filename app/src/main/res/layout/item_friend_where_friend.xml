<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_where_item_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_button_where_home"
    android:padding="@dimen/margin_button_where_home"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_avatar_where_item_friend"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="2dp"
        android:background="@drawable/bg_circle"
        android:src="@drawable/default_user"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name_where_item_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyen Phuc Thanh"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin_button_where_home"/>
        <TextView
            android:id="@+id/tv_phone_where_item_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:paddingLeft="@dimen/margin_button_where_home"
            android:text="0986787765"/>
    </LinearLayout>
</LinearLayout>