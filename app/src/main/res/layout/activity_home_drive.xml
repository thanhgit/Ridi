<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeDriveActivity"
    tools:layout_editor_absoluteY="81dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_ride_where_home_drive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_button_where_home"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/primaryDarkColor"
                android:text="Ride"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_drive_where_home_drive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_button_where_home"
                android:layout_weight="1"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/primaryLightColor"
                android:text="Drive"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/primaryLightColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_button_where_home"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize_title"
                    android:textColor="@color/primaryDarkColor"
                    android:text="Set trips" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize_normal"
                            android:text="Here" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_start_where_home"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="@dimen/margin_button_where_home"
                            android:background="@drawable/marker_start"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textColor="@color/primaryDarkColor"
                            android:textSize="40sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize_normal"
                            android:text="Where" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_end_where_home"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="@dimen/margin_button_where_home"
                            android:background="@drawable/marker_end"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_post_as_drive_where_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/colorAccent"
                android:layout_margin="@dimen/margin_button_where_home"
                android:text="Post as drive"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>