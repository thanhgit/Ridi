<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_where_item_search_place"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_button_where_home"
    android:layout_marginLeft="@dimen/margin_button_where_home"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_bg_where_item_search_place"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="@drawable/to_place"
        android:layout_margin="@dimen/margin_normal"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_place_name_where_item_search_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_button_where_home"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"/>
        <TextView
            android:id="@+id/tv_place_name_detail_item_search_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_button_where_home"
            android:textStyle="italic"
            android:textColor="@color/colorPrimary"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/textsize_normal"
            android:text="Detail"/>
    </LinearLayout>


</LinearLayout>