<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_where_search_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".presentation.SearchPlaceActivity">

    <!--<fragment-->
        <!--class="com.here.android.mpa.mapping.MapFragment"-->
        <!--android:id="@+id/map_where_search_place_activity"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_where_search_place_activity"
        tools:context=".presentation.SearchPlaceActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_button_where_home"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ibtn_menu_where_search_place"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_menu_black_24dp"/>
                    <EditText
                        android:id="@+id/txt_search_where_search_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize_title"
                        android:background="@null"/>
                    <ImageView
                        android:id="@+id/ibtn_close_where_search_place"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_close_black_24dp"
                        android:visibility="gone"/>
                    <ImageButton
                        android:id="@+id/ibtn_routing_where_search_place"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@color/transparent"
                        android:src="@drawable/routing"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_place_name_where_search_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"></android.support.v7.widget.RecyclerView>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|right"
        android:layout_margin="@dimen/margin_button_where_home"
        android:paddingTop="80dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_my_location_where_search_place"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/margin_button_where_home"
            android:background="@drawable/ic_my_location_black_24dp"/>
        <ImageView
            android:id="@+id/iv_search_location_where_search_place"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/margin_button_where_home"
            android:background="@drawable/ic_edit_location_black_24dp"/>
    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view_where_search_place"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:backgroundTint="@color/white"
        app:menu="@menu/history_search_menu"
        android:background="@color/colorPrimaryDark"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>