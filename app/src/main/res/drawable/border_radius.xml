<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#aeb3b2" />
            <gradient android:angle="-90" android:startColor="#aeaeae" android:endColor="#b4b6b5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#c6c6c6" />
            <solid android:color="#ababab"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#abafaf" />
            <gradient android:angle="-90" android:startColor="#9a9c9c" android:endColor="#c8caca" />
        </shape>
    </item>
</selector>